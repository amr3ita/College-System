<h1 class="text-center bg-dark text-warning my-3 p-4 rounded w-50 mx-auto">
    Edit Student Info</h1>

<section class="form-section my-4">
    <div class="container">
        <div class="row mx-auto">
            <div class="col-sm-9">
                <form action="/admin/<%= student.id%>/editStuInfo" method="post">
                    <div class="form-group my-2">
                        <label for="Stu_name">Student Name</label>
                        <input type="text" class="form-control" name="Stu_name" id="Stu_name"
                            value="<%= student.Stu_name%>">
                    </div>
                    <div class="form-group my-2">
                        <label for="Stu_email">Student Email</label>
                        <input type="text" class="form-control" id="Stu_email" name="Stu_email"
                            value="<%= student.Stu_email%>" disabled>
                    </div>
                    <div class="form-group my-2">
                        <label for="Stu_code">Student Code</label>
                        <input type="text" class="form-control" id="Stu_code" name="Stu_code"
                            value="<%= student.Stu_code%>" disabled>
                    </div>
                    <div class="form-group my-2">
                        <label for="Stu_password">Student Password</label>
                        <input type="password" class="form-control" id="Stu_password" name="Stu_password"
                            placeholder="Enter old or new password">
                    </div>
            </div>
            <input type="submit" value="Edit Student" class="btn btn-outline-success mt-2">
            </form>
        </div>
    </div>
    </div>
</section>
