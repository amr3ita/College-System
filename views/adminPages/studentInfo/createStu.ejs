<h1 class="text-center bg-dark text-warning my-3 p-4 rounded w-50 mx-auto">
    Add Student</h1>

<section class="form-section my-4">
    <div class="container">
        <div class="row mx-auto">
            <div class="col-sm-9">
                <form action="" method="post">
                    <div class="form-group my-2">
                        <label for="Stu_name">Student name</label>
                        <input type="text" class="form-control" name="Stu_name" id="Stu_name">
                    </div>
                    <div class="form-group my-2">
                        <label for="Stu_password">Password</label>
                        <input type="password" class="form-control" id="Stu_password" name="Stu_password">
                    </div>
                    <input type="submit" value="Add Student" class="btn btn-outline-primary mt-2">
                </form>
            </div>
        </div>
    </div>
</section>
