<h1 class="text-center bg-dark text-warning my-3 p-4 rounded w-50 mx-auto">
    Edit Doctor</h1>

<section class="form-section my-4">
    <div class="container">
        <div class="row mx-auto">
            <div class="col-sm-9">
                <form action="/admin/<%= doctor.id%>/editDocInfo" method="post">
                    <div class="form-group my-2">
                        <label for="Doc_name">Doctor Name</label>
                        <input type="text" class="form-control" name="Doc_name" id="Doc_name"
                            value="<%= doctor.Doc_name%>">
                    </div>
                    <div class="form-group my-2">
                        <label for="Doc_code">Doctor Code</label>
                        <input type="text" class="form-control" id="Doc_code" name="Doc_code"
                            value="<%= doctor.Doc_code%>" disabled>
                    </div>
                    <div class="form-group my-2">
                        <label for="Doc_email">Doctor Email</label>
                        <input type="text" class="form-control" id="Doc_email" name="Doc_email"
                            value="<%= doctor.Doc_email%>" disabled>
                    </div>
                    <div class="form-group my-2">
                        <label for="Doc_password">Doctor Password</label>
                        <input type="password" class="form-control" id="Doc_password" name="Doc_password"
                            placeholder="Enter old or new password">
                    </div>
                    <div class="form-group my-2">
                        <label for="SUB_name">Subject Name</label>
                        <select class="form-select" name="SUB_name" id="SUB_name" aria-label="Default select example">
                            <% if(subject.length> 0){%>
                                <%for(let sub of subject){%>
                                    <option value="<%= sub.SUB_name%>">
                                        <%= sub.SUB_name%>
                                    </option>
                                    <%}%>
                                        <%}%>
                                            <option value="Null">
                                                Null
                                            </option>
                        </select>
                    </div>

            </div>
            <input type="submit" value="Edit Department" class="btn btn-outline-success mt-2">
            </form>
        </div>
    </div>
    </div>
</section>
